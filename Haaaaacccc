--// Hacks Hub Enhanced (Draggable + Close + Transparency)
--// Key: Xerox | Owner: AvBL4ZE

local CoreGui = game:GetService("CoreGui")
local Player = game.Players.LocalPlayer

-- Remove old UI if exists
pcall(function()
	if CoreGui:FindFirstChild("HacksHub") then
		CoreGui.HacksHub:Destroy()
	end
end)

local function create(class, props)
	local obj = Instance.new(class)
	for i, v in pairs(props) do
		obj[i] = v
	end
	return obj
end

local CORRECT_KEY = "Xerox"

-- Create main GUI
local gui = create("ScreenGui", {
	Name = "HacksHub",
	Parent = CoreGui,
	ResetOnSpawn = false
})

-- Key frame
local frame = create("Frame", {
	Parent = gui,
	Size = UDim2.new(0, 420, 0, 180),
	Position = UDim2.new(0.5, -210, 0.5, -90),
	AnchorPoint = Vector2.new(0.5, 0.5),
	BackgroundColor3 = Color3.fromRGB(20, 20, 20),
	BackgroundTransparency = 0.25,
	BorderSizePixel = 0
})
create("UICorner", {Parent = frame, CornerRadius = UDim.new(0, 10)})

local title = create("TextLabel", {
	Parent = frame,
	Size = UDim2.new(1, -40, 0, 40),
	Position = UDim2.new(0, 20, 0, 10),
	Text = "Hacks Hub - Enter Key",
	TextColor3 = Color3.new(1,1,1),
	Font = Enum.Font.GothamBold,
	TextSize = 22,
	BackgroundTransparency = 1
})

local box = create("TextBox", {
	Parent = frame,
	Size = UDim2.new(1, -40, 0, 35),
	Position = UDim2.new(0, 20, 0, 60),
	BackgroundColor3 = Color3.fromRGB(35,35,35),
	BackgroundTransparency = 0.2,
	TextColor3 = Color3.new(1,1,1),
	PlaceholderText = "Enter Key...",
	Font = Enum.Font.Gotham,
	TextSize = 16,
	ClearTextOnFocus = false
})
create("UICorner", {Parent = box, CornerRadius = UDim.new(0, 6)})

local submit = create("TextButton", {
	Parent = frame,
	Size = UDim2.new(0, 100, 0, 35),
	Position = UDim2.new(1, -120, 1, -45),
	Text = "Submit",
	TextColor3 = Color3.new(1,1,1),
	Font = Enum.Font.GothamBold,
	TextSize = 16,
	BackgroundColor3 = Color3.fromRGB(45,45,45),
	BackgroundTransparency = 0.1
})
create("UICorner", {Parent = submit, CornerRadius = UDim.new(0, 6)})

-- Make frame draggable
local dragging, dragInput, dragStart, startPos
frame.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		dragging = true
		dragStart = input.Position
		startPos = frame.Position
	end
end)
frame.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
		dragInput = input
	end
end)
game:GetService("UserInputService").InputChanged:Connect(function(input)
	if input == dragInput and dragging then
		local delta = input.Position - dragStart
		frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
	end
end)
frame.InputEnded:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		dragging = false
	end
end)

-- Open main hub function
local function openHub()
	frame:Destroy()

	local hub = create("Frame", {
		Parent = gui,
		Size = UDim2.new(0, 500, 0, 280),
		Position = UDim2.new(0.5, -250, 0.5, -140),
		AnchorPoint = Vector2.new(0.5, 0.5),
		BackgroundColor3 = Color3.fromRGB(20,20,20),
		BackgroundTransparency = 0.25
	})
	create("UICorner", {Parent = hub, CornerRadius = UDim.new(0, 12)})

	local closeBtn = create("TextButton", {
		Parent = hub,
		Size = UDim2.new(0, 28, 0, 28),
		Position = UDim2.new(1, -35, 0, 10),
		Text = "‚úï",
		TextColor3 = Color3.new(1, 0.4, 0.4),
		Font = Enum.Font.GothamBold,
		TextSize = 20,
		BackgroundTransparency = 1
	})
	closeBtn.MouseButton1Click:Connect(function()
		gui:Destroy()
	end)

	local title2 = create("TextLabel", {
		Parent = hub,
		Size = UDim2.new(1, 0, 0, 40),
		Text = "üî• Hacks Hub Enhanced üî•",
		TextColor3 = Color3.new(1,1,1),
		Font = Enum.Font.GothamBold,
		TextSize = 24,
		BackgroundTransparency = 1
	})

	local urls = {
		["Fly GUI"] = "https://raw.githubusercontent.com/XNEOFF/FlyGuiV3/main/FlyGuiV3.txt",
		["Script Searcher"] = "https://raw.githubusercontent.com/madonchik123/USL/main/main.lua",
		["Zekrom"] = "https://raw.githubusercontent.com/ahmadsgamer2/Zekrom-Hub-X/main/Zekrom-Hub-X-exe",
		["Speed Hub"] = "https://raw.githubusercontent.com/AhmadV99/Speed-Hub-X/main/Speed%20Hub%20X.lua"
	}

	local x, y = 0, 0.3
	for name, link in pairs(urls) do
		local btn = create("TextButton", {
			Parent = hub,
			Size = UDim2.new(0, 200, 0, 45),
			Position = UDim2.new(x == 0 and 0.08 or 0.55, 0, y, 0),
			Text = name,
			TextColor3 = Color3.new(1,1,1),
			Font = Enum.Font.Gotham,
			TextSize = 18,
			BackgroundColor3 = Color3.fromRGB(45,45,45),
			BackgroundTransparency = 0.1
		})
		create("UICorner", {Parent = btn, CornerRadius = UDim.new(0, 6)})
		btn.MouseButton1Click:Connect(function()
			loadstring(game:HttpGet(link))()
		end)
		if x == 0 then
			x = 1
		else
			x = 0
			y = y + 0.35
		end
	end
end

-- Submit button check
submit.MouseButton1Click:Connect(function()
	if box.Text == CORRECT_KEY then
		openHub()
	else
		box.Text = ""
		box.PlaceholderText = "‚ùå Wrong Key"
	end
end)
